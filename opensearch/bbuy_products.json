{
  "settings": {
    "index.refresh_interval": "5s",
    "analysis": {
      "analyzer": {
        "csv_analyzer": {
          "tokenizer": "csv_tokenizer"
        },
        "english_shingle": {
          "tokenizer":  "standard",
          "filter": [
            "english_possessive_stemmer",
            "lowercase",
            "english_stop",
            "english_keywords",
            "english_stemmer",
            "shingle_no_unigram"
          ]
        }
        
      },
      "tokenizer": {
        "csv_tokenizer": {
          "type": "pattern",
          "pattern": ", "
        }
      },
      "filter": {        
        "english_stop": {
          "type":       "stop",
          "stopwords":  "_english_" 
        },
        "english_keywords": {
          "type":       "keyword_marker",
          "keywords":   ["example"] 
        },
        "english_stemmer": {
          "type":       "stemmer",
          "language":   "english"
        },
        "english_possessive_stemmer": {
          "type":       "stemmer",
          "language":   "possessive_english"
        },
        "shingle_no_unigram": {
          "type": "shingle",
          "min_shingle_size": 2,
          "max_shingle_size": 3,
          "output_unigrams": true
        }
      }
    }
  },
